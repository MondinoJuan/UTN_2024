@model dynamic  
@{
}
<form method="post" asp-controller="Login" asp-action="Login">
    <div>
        <table border="1">
            <thead>
                <tr>
                    <th></th>
                    <th></th>
                    <th>
                        <label id="lblBienvenido">¡Bienvenido al sistema!</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td></td>
                    <td><label for="Username" id="lblUsuario">Usuario</label></td>
                    <td><input type="text" name="username" id="txtUsuario" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td><label for="Password" id="lblClave">Clave</label></td>
                    <td><input type="password" name="password" id="txtClave" /></td>
                </tr>
                <tr>
                    <td></td>
                    <td></td>
                    <td><button type="submit" id="btnIngresar">Ingresar</button></td>
                </tr>
                <tr>
                    <td>
                        <a asp-controller="Login" asp-action="RecordarClave">Olvidé mi clave</a>
                    </td>
                    <td></td>
                    <td></td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Muestra el mensaje de error o éxito aquí -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div style="color:red;">@ViewBag.Message</div>
    }
</form>
